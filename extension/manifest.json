{
  "manifest_version": 3,
  "name": "Fact Checker AI",
  "version": "1.0",
  "description": "An AI-powered fact-checking extension for news articles",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "src/utils/domUtils.js",
        "src/services/sentenceTracker.js",
        "src/services/factCheckService.js",
        "src/content.js"
      ],
      "css": ["src/styles.css"]
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 